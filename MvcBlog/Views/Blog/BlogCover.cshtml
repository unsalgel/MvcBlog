@model IEnumerable<EntityLayer.Concrete.Blog>
@{ string color = ""; }
@foreach (var item in Model)
{
    if (item.Category.CategoryName == "Seyahat")
    {
        color = " text-white bg-primary ";
    }
    else if (item.Category.CategoryName == "Teknoloji")
    {
        color = " text-white bg-info ";
    }
    else if (item.Category.CategoryName == "Kültür & Sanat")
    {
        color = " text-white bg-dark";
    }
    else if (item.Category.CategoryName == "Yazılım")
    {
        color = " text-white bg-warning ";
    }
    else if (item.Category.CategoryName == "Spor")
    {
        color = "text-white bg-danger ";
    }
    else if (item.Category.CategoryName == "Film & Dizi")
    {
        color = " text-white bg-success ";
    }
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@item.BlogImage');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <span class="post-category text-white @color  mb-3">@item.Category.CategoryName</span>
                    <h1 class="mb-4"><a href="#">@item.BlogTitle.</a></h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="@item.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">@item.Author.AuthorName</span>
                        <span>&nbsp;-&nbsp; @item.BlogDate.ToString("dd-MMM-yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>}
