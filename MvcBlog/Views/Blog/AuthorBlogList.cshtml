@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{string color = ""; string status = "";}
<html>



<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yazılarım</h3>
                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                #

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>
                            <th>

                                Blog  Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating >= 85)
                            {

                                color = "badge-success";
                                status = "Çok iyi";
                            }
                            else if (item.BlogRating >= 70 && item.BlogRating <= 84)
                            {
                                color = "badge-info";
                                status = "Başarılı";
                            }
                            else if (item.BlogRating >= 50 && item.BlogRating <= 69)
                            {
                                color = "badge-warning";
                                status = "Fena Değil";
                            }
                            else
                            {
                                color = "badge-danger";
                                status = "Vasat";
                            }
                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <td>

                                    <a>

                                        <b>@item.BlogTitle</b>

                                    </a>

                                    <br />


                                </td>


                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-gradient-orange" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width:@item.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan @item.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class=" badge @color">@status</span>

                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>
 
        <!-- /.card -->

    </section>

</body>

</html>