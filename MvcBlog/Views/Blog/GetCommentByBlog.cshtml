@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        <section class="content">
            <div class="container-fluid">


                <div class="row">
                    <div class="col-md-12">

                        <div class="timeline">
                            @foreach (var item in Model)
                            {
                                <div class="time-label">
                                    <span class="bg-success">@item.CommentDate.ToString("dd-MMM-yyy")</span>
                                </div>

                                <div>
                                    <i class="fas fa-comment bg-yellow"></i>
                                    <div class="timeline-item">

                                        <h3 class="timeline-header"><b class="text-danger">@item.UserName</b> &nbsp; <i class="text-blue">@item.Mail</i>  </h3>

                                        <div class="timeline-body">
                                            @item.CommentText
                                        </div>
                                        <div class="timeline-footer">
                                            <a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-primary btn-sm">Detaylar</a>
                                            <a href="/Comment/DeleteComment/@item.CommentID" class="btn btn-danger btn-sm">Yorumu Kaldır</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                            </div>

                            <div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>


        </section>

    </div>



</body>
</html>
