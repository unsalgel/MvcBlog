@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentListTrue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">

                    <!-- Post -->
                    @foreach (var item in Model)
                    {

                    <div class="post">
                        
                        <div class="user-block">

                            <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                            <span class="username">

                                <a href="#">@item.UserName - <font color="red">@item.Blogs.BlogTitle</font></a>
 

                            </span>

                            <span class="description">@item.CommentDate.ToString("dd-MMM-yyy")</span>

                        </div>

                        <!-- /.user-block -->

                        <p>

                            @item.CommentText

                        </p>

                        <p>




                            <span class="float-right">

                                <a href="/Comment/StatusChangeToFalse/@item.CommentID" class="link-black text-sm">

                                    <i class="fas fa-trash mr-1"></i> Yorumu Gösterme


                                </a>

                            </span>
                            <br />

                        </p>
 

                    </div>

                    }
                </div>

            </div>

        </div><!-- /.card-body -->



    </section>

</body>

</html>