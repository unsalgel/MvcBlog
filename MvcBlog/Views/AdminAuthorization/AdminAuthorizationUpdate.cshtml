@model  IEnumerable<EntityLayer.Concrete.Admin>
@{
    ViewBag.Title = "AdminAuthorizationUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AdminListeleme</h2>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">



        <section class="content">



            <div class="card card-solid">


                <div class="card-body pb-0">


                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">

                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">
                                       Yönetici

                                    </div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@item.UserName</b></h2>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="~/miniblog/images/personal.png"  alt="" class="img-circle img-fluid">

                                            </div>

                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">

                                            <a href="/AdminAuthorization/AdminUpdate/@item.AdminID" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Admin Güncelle

                                            </a>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        }
                    </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>
