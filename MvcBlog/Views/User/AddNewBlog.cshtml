@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "AddNewBlog";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<form class="form-group" method="post">
    <label>Blog Başlıgı</label>
    <input type="text" class="form-control" name="BlogTitle" />
    <br />
    <label>Blog Kategori</label>
    @Html.DropDownListFor(p => p.CategoryID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control" })
    <br />
    <label>Blog Resim</label>
    <input type="text" class="form-control" name="BlogImage" />
    <br />
    <label>Blog Tarih</label>
    <input type="text" class="form-control" name="BlogDate" />
    <br />
    <label>Yazar</label>
    @Html.DropDownListFor(p => p.AuthorID, (List<SelectListItem>)ViewBag.authorvalues, new { @class = "form-control" })
    <br />
    <label>Blog yazısı</label>
    <textarea class="form-control" name="BlogContent" rows="8"></textarea>
    <br />
    <button class="btn btn-info">Blog Ekle</button>
</form>



