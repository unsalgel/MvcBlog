@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @using(Html.BeginForm("UpdateAuthorProfile", "User",FormMethod.Post))
    {
        foreach (var item in Model)
        {
    <form class="form-horizontal">   
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="text" hidden class="form-control" name="AuthorID" id="inputName" value="@item.AuthorID">
            </div>
        </div>
        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" name="AuthorName" id="inputName" value="@item.AuthorName">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

            <div class="col-sm-10">

                <input type="email" name="Mail" class="form-control" id="inputEmail" value="@item.Mail">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Meslek</label>

            <div class="col-sm-10">

                <input type="text" name="AuthorTitle" class="form-control" id="inputName2" value="@item.AuthorTitle">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Yetenekler</label>

            <div class="col-sm-10">

                <input class="form-control" name="AboutShort" id="inputExperience" value="@item.AboutShort">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" name="PhoneNumber" id="inputSkills" value="@item.PhoneNumber">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Avatar</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" name="AuthorImage" id="inputSkills" value="@item.AuthorImage">

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

            <div class="col-sm-10">

                <input type="text" class="form-control" name="Password" id="inputSkills" value="@item.Password">

            </div>

        </div>



        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>

            <div class="col-sm-10">

                <input type="password" class="form-control" id="inputSkills">

            </div>

        </div>


        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> Şifremi değiştirmek istiyorum

                    </label>

                </div>

            </div>

        </div>
        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>

            <div class="col-sm-10">

                <textarea id="w3review" name="AuthorAbout" class="form-control" rows="4" cols="50">@item.AuthorAbout</textarea>


            </div>


        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-success">Profilimi Güncelle</button>

            </div>

        </div>

    </form>
        }
    }
</div>