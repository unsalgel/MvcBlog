@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
@{string color = ""; string status = "";  int puan = 1;}
<html>



<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Yazılarım</h3>
                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                #

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>
                            <th>

                                Blog  Değerlendirme Oranı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            puan = item.BlogRating * 10;
                            if (puan >= 85)
                            {

                                color = "badge-success";
                                status = "Çok iyi";
                            }
                            else if (puan >= 70 && puan <= 84)
                            {
                                color = "badge-info";
                                status = "Başarılı";
                            }
                            else if (puan >= 50 && puan <= 69)
                            {
                                color = "badge-warning";
                                status = "Fena Değil";
                            }
                            else
                            {
                                color = "badge-danger";
                                status = "Vasat";
                            }
                            puan = item.BlogRating * 10;
                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <td>

                                    <a>

                                        <b>@item.BlogTitle</b>

                                    </a>

                                    <br />


                                </td>

                     
                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-gradient-orange" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="100" style="width:@puan%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan  @puan

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class=" badge @color">@status</span>

                                </td>

                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>
        <a href="/User/AddNewBlog/" class="btn btn-primary">Yeni Blog Ekle</a>
        <!-- /.card -->

    </section>

</body>

</html>